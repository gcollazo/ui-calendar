<div class="date flex-item">
<div class="vflexy">
    <div class="dow">{{moment value 'dddd'}}</div>
    <div class="dom">{{moment value 'DD'}}</div>
    <div class="month">{{moment value 'MMMM'}}</div>
</div>
</div>
<div class="time flexy-grow vertical">
  <div class="from flex-item">
    {{moment value 'h:mm'}}<span class="ampm">{{moment value 'a'}}</span>
  </div>
  {{#if _stopTime}}
    <div class="to flex-item">
      to {{moment value 'h:mm'}}
    </div>
  {{/if}}
</div>
{{yield}}
